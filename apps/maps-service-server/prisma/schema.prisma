datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Location {
  createdAt              DateTime            @default(now())
  description            String?
  favoriteLocationsItems FavoriteLocations[]
  id                     String              @id @default(cuid())
  latitude               Float?
  longitude              Float?
  name                   String?
  updatedAt              DateTime            @updatedAt
}

model MapSettings {
  createdAt       DateTime                @default(now())
  defaultLocation String?
  id              String                  @id @default(cuid())
  mapType         EnumMapSettingsMapType?
  updatedAt       DateTime                @updatedAt
  zoomLevel       Int?
}

model FavoriteLocations {
  createdAt  DateTime  @default(now())
  id         String    @id @default(cuid())
  location   Location? @relation(fields: [locationId], references: [id])
  locationId String?
  notes      String?
  updatedAt  DateTime  @updatedAt
  user       User?     @relation(fields: [userId], references: [id])
  userId     String?
}

model User {
  createdAt              DateTime            @default(now())
  email                  String?             @unique
  favoriteLocationsItems FavoriteLocations[]
  firstName              String?
  id                     String              @id @default(cuid())
  lastName               String?
  password               String
  roles                  Json
  updatedAt              DateTime            @updatedAt
  username               String              @unique
}

enum EnumMapSettingsMapType {
  Option1
}
